<%- include('header.ejs') %>

<section class="relative flex items-center justify-center top-0 h-screen w-full">
    <div class="w-[60%] bg-leftGreenGradient h-full"></div>
    <div class="w-[60%] bg-rightGreenGradient h-full"></div>
    <div class="absolute flex flex-col w-full h-full">
        <div class="mt-16 xsm:w-full">
            <div class="flex justify-center h-full xsm:w-full">
                <!-- Form -->
                <form class="w-1/2 mx-auto z-10 mt-24" action="/api/manual/UploadData" method="post">
                    <div class="bg-white shadow-md rounded xsm:px-8 py-4 sm:px-12 py-12">
                        <h2 class="text-2xl font-bold mb-4">Blood Report Diagnosis</h2>

                        <div id="bloodReport-Form">
                            <div class="flex flex-wrap -mx-2">

                                <div class="w-full xsm:w-1/2 sm:w-1/3 md:w-1/4 px-2 mb-4">
                                    <label class="block text-gray-700 font-bold mb-2" for="bloodReport-hemoglobin">
                                        Hemoglobin:
                                    </label>
                                    <input id="bloodReport-hemoglobin" name="bloodReport_hemoglobin" type="text"
                                        class="border border-gray-300 rounded w-full py-2 px-3 focus:outline-none focus:ring focus:border-blue-300">
                                </div>
                                <div class="w-full xsm:w-1/2 sm:w-1/3 md:w-1/4 px-2 mb-4">
                                    <label class="block text-gray-700 font-bold mb-2" for="bloodReport-rbc">
                                        RBC Count:
                                    </label>
                                    <input id="bloodReport-rbc" name="bloodReport_rbc" type="text"
                                        class="border border-gray-300 rounded w-full py-2 px-3 focus:outline-none focus:ring focus:border-blue-300">
                                </div>
                                <div class="w-full xsm:w-1/2 sm:w-1/3 md:w-1/4 px-2 mb-4">
                                    <label class="block text-gray-700 font-bold mb-2" for="bloodReport-hematocrit">
                                        Hematocrit:
                                    </label>
                                    <input id="bloodReport-hematocrit" name="bloodReport_hematocrit" type="text"
                                        class="border border-gray-300 rounded w-full py-2 px-3 focus:outline-none focus:ring focus:border-blue-300">
                                </div>
                                <div class="w-full xsm:w-1/2 sm:w-1/3 md:w-1/4 px-2 mb-4">
                                    <label class="block text-gray-700 font-bold mb-2" for="bloodReport-wbc">
                                        WBC Count:
                                    </label>
                                    <input id="bloodReport-wbc" name="bloodReport_wbc" type="text"
                                        class="border border-gray-300 rounded w-full py-2 px-3 focus:outline-none focus:ring focus:border-blue-300">
                                </div>
                                <div class="w-full xsm:w-1/2 sm:w-1/3 md:w-1/4 px-2 mb-4">
                                    <label class="block text-gray-700 font-bold mb-2" for="bloodReport-neutrophils">
                                        Neutrophils:
                                    </label>
                                    <input id="bloodReport-neutrophils" name="bloodReport_neutrophils" type="text"
                                        class="border border-gray-300 rounded w-full py-2 px-3 focus:outline-none focus:ring focus:border-blue-300">
                                </div>
                                <div class="w-full xsm:w-1/2 sm:w-1/3 md:w-1/4 px-2 mb-4">
                                    <label class="block text-gray-700 font-bold mb-2" for="bloodReport-lymphocytes">
                                        Lymphocytes:
                                    </label>
                                    <input id="bloodReport-lymphocytes" name="bloodReport_lymphocytes" type="text"
                                        class="border border-gray-300 rounded w-full py-2 px-3 focus:outline-none focus:ring focus:border-blue-300">
                                </div>
                                <div class="w-full xsm:w-1/2 sm:w-1/3 md:w-1/4 px-2 mb-4">
                                    <label class="block text-gray-700 font-bold mb-2" for="bloodReport-monocytes">
                                        Monocytes:
                                    </label>
                                    <input id="bloodReport-monocytes" name="bloodReport_monocytes" type="text"
                                        class="border border-gray-300 rounded w-full py-2 px-3 focus:outline-none focus:ring focus:border-blue-300">
                                </div>
                                <div class="w-full xsm:w-1/2 sm:w-1/3 md:w-1/4 px-2 mb-4">
                                    <label class="block text-gray-700 font-bold mb-2" for="bloodReport-eosinophils">
                                        Eosinophils:
                                    </label>
                                    <input id="bloodReport-eosinophils" name="bloodReport_eosinophils" type="text"
                                        class="border border-gray-300 rounded w-full py-2 px-3 focus:outline-none focus:ring focus:border-blue-300">
                                </div>
                                <div class="w-full xsm:w-1/2 sm:w-1/3 md:w-1/2 px-2 mb-4">
                                    <label class="block text-gray-700 font-bold mb-2" for="bloodReport-platelet">
                                        Platelet Count:
                                    </label>
                                    <input id="bloodReport-platelet" name="bloodReport_platelet" type="text"
                                        class="border border-gray-300 rounded w-full py-2 px-3 focus:outline-none focus:ring focus:border-blue-300">
                                </div>
                                <div class="w-full xsm:w-1/2 sm:w-1/3 md:w-1/2 px-2 mb-4">
                                    <label class="block text-gray-700 font-bold mb-2" for="bloodReport-platelet">
                                        MCV:
                                    </label>
                                    <input id="bloodReport-mcv" name="bloodReport_mcv" type="text"
                                        class="border border-gray-300 rounded w-full py-2 px-3 focus:outline-none focus:ring focus:border-blue-300">
                                </div>
                                <div class="w-full xsm:w-1/2 sm:w-1/3 md:w-1/2 px-2 mb-4">
                                    <label class="block text-gray-700 font-bold mb-2" for="bloodReport-platelet">
                                        MCH:
                                    </label>
                                    <input id="bloodReport-mch" name="bloodReport_mch" type="text"
                                        class="border border-gray-300 rounded w-full py-2 px-3 focus:outline-none focus:ring focus:border-blue-300">
                                </div>
                                <div class="w-full xsm:w-1/2 sm:w-1/3 md:w-1/2 px-2 mb-4">
                                    <label class="block text-gray-700 font-bold mb-2" for="bloodReport-platelet">
                                        MCHC:
                                    </label>
                                    <input id="bloodReport-mchc" name="bloodReport_mchc" type="text"
                                        class="border border-gray-300 rounded w-full py-2 px-3 focus:outline-none focus:ring focus:border-blue-300">
                                </div>
                            </div>
                        </div>
                        <button
                            class="w-full mt-2 sm:mt-4 bg-green-500 hover:bg-green-700 duration-300 text-white font-bold py-2 px-4 rounded"
                            type="submit">Process</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<%- include('footer.ejs') %>
<%- include('bottom.ejs') %>