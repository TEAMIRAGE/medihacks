<%- include('header.ejs') %>

<section class="flex flex-col top-0 h-4/5 w-full h-screen bg-bottomGreen">
  <div class="my-8 flex flex-col items-center w-full h-auto">
    <div class="my-32">
      <h1 class="w-full font-bold text-center text-6xl mb-4 text-white">
        Medilocker - Your own private medical data</h1>
      <div class="flex flex-start w-full">
        <div id="all" class="flex flex-col w-full my-8">
          <div class="flex justify-between">
            <h1 class="text-2xl font-bold text-white">Patient Reports</h1>
            <a href="/mediLocker-add-form"><button
                class="w-40 h-10 bg-sky-700 text-white rounded-xl font-bold text-lg duration-500 hover:scale-110">Add
                files</button>
            </a>
          </div>
          <div class="flex flex-wrap w-full">
            <% if (mediLockerSignedURLs.length === 0){ %>
            <h3>Empty</h3>
            <% } else { %>
            <% mediLockerSignedURLs.forEach((info) => { %>
            <div class="flex justify-center w-1/4 my-4">
              <div class="bg-white shadow-xl rounded-xl w-10/12 h-full">
                <a class="h-60 w-36" href="<%= info.signedURL %>">
                  <img class="rounded-t-lg" class="cover h-10 w-10" src="/images/pdf-image.png" alt="">
                </a>
                <div class="flex justify-between p-5">
                  <!-- <h5 class="text-gray-900 text-lg mb-2">
                    <%= info.date %></h5> -->
                  <a href="/crud/delete-mediLocker-data/<%= info.uniqueID %>"
                    class="text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-3 py-2 text-center inline-flex items-center">
                    Delete
                  </a>
                </div>
              </div>
            </div>
            <% }); %>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

